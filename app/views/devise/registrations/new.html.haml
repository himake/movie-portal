.form_container
  %h2.form_header= t('.sign_up')
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark  Email
          = f.email_field :email, :required => true, :autofocus => true, placeholder: 'email', class: 'form-control'
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark= t('name')
        = f.text_field :name, :required => false, :autofocus => true, placeholder: 'name', class: 'form-control'
    .field  
      .input-group  
        .input-group-prepend
          .input-group-text.bg-light.text-dark= t('surname')
        = f.text_field :surname, :required => false, :autofocus => true, placeholder: 'surname', class: 'form-control'
    - if @minimum_password_length
      .small.form-text.text-muted= t('devise.shared.minimum_password_length', count: @minimum_password_length)
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark= t('activerecord.attributes.user.password')
          = f.password_field :password, autocomplete: "new-password", class: 'form-control' 
    .field
      .input-group
        .input-group-prepend
          .input-group-text.bg-light.text-dark= t('activerecord.attributes.user.password_confirmation')
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'
    .actions
      %button.btn.form_button= t('.sign_up')
  = render "devise/shared/links"